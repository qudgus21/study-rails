<div class="index">
    <div class="search">
        <div>총 <%=@posts.count%>건의 게시물</div>
        <form action="/" method="post">
            <input type="text" name="title" placeholder="제목"/>
            <input type="text" name="creator" placeholder="작성자"/>
            <%= radio_button_tag :sort, "created_at", :checked %>
            <%= label_tag :"생성일 기준" %>
            <%= radio_button_tag :sort, "updated_at" %>
            <%= label_tag :"수정일 기준" %>
            <input type="submit" value="검색하기"/>
        </form>
    </div>
    <table>
        <thead>
            <th>제목</th>
            <th>작성자</th>
            <th>
                생성일
            </th>
            <th>최종 수정일</th>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                    <td><a href="/post/<%=post.id%>"><%=post.title%></a></td>
                    <td><a href="/post/<%=post.id%>"><%=post.creator%></a></td>
                    <td><a href="/post/<%=post.id%>"><%=post.created_at.strftime("%Y-%m-%d %H:%M ")%></a></td>
                    <td><a href="/post/<%=post.id%>"><%=post.updated_at.strftime("%Y-%m-%d %H:%M ")%></a></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="button">
        <a href="/post/write">글 작성하기</a>
    </div>
</div>